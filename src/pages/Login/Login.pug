include ../../module/input/input
include ../../module/button/button

block content
    case routes
        when 'login'
            .form-container
                form.login-form(action="/login" method="post")
                    h1.form-title Sign in
                    +moduleInput("E-mail","Enter e-mail", "login")
                    +modulePasswordInput("Password","Enter password", "password")
                    +moduleButton("Sign in", "login")
